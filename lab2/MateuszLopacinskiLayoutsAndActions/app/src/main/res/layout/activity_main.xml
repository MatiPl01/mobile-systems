<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/layout_background">

    <!-- center anchor -->
    <View
        android:id="@+id/center_guide"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_centerInParent="true" />

    <!-- Left: fills from left edge to center -->
    <EditText
        android:id="@+id/hello_there_edittext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@id/center_guide"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:text="@string/hello_string"
        android:textSize="30sp"
        android:textStyle="bold"
        android:layout_marginEnd="8dp" />

    <!-- Right: fills from center to right edge -->
    <EditText
        android:id="@+id/awesome_android_edittext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/center_guide"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:text="Android is so awesome"
        android:textSize="30sp"
        android:textStyle="bold"
        android:layout_marginStart="8dp" />
</RelativeLayout>
